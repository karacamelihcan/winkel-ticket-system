<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card">
            <div class="card-body">
                <form asp-action="Add" asp-controller="User" method="post">
                    @if (ViewBag.Result == "Error")
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="mdi mdi-block-helper me-2"></i>
                            @ViewBag.Message
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="offset-md-3">
                        <div class="row mb-3 ">
                            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-6">
                                <input class="form-control" placeholder="Kullanıcı Adı" asp-for="Name">
                            </div>
                        </div>
                        <div class="row mb-3 ">
                            <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-6">
                                <input class="form-control" placeholder="Kullanıcı Soyadı" asp-for="Surname">
                            </div>
                        </div>
                        <div class="row mb-3 ">
                            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-6">
                                <input class="form-control" placeholder="E-posta" asp-for="Email">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-6">
                                <input class="form-control" placeholder="Kullanıcı Şifresi" asp-for="Password">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="PasswordConfirm" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-6">
                                <input class="form-control" placeholder="Kullanıcı Şifresi" asp-for="PasswordConfirm">
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mb-3">
                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                Kullanıcı Ekle
                                <i class="ri-arrow-right-line align-middle ms-2"></i>
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>




<script>
    function AddUser() {

        let inputCheckLabel = document.getElementById("addUserCheck");
        inputCheckLabel.innerHTML = "";
        let name = document.getElementById('name').value;
        if (name == "") {
            inputCheckLabel.innerHTML = CheckMessageGenerator("Kullanıcı adı boş bırakılamaz", "error");
            return;
        }
        let surname = document.getElementById("surname").value;
        if (surname == "") {
            inputCheckLabel.innerHTML = CheckMessageGenerator("Kullanıcı soyadı boş bırakılamaz", "error");
            return;
        }
        let password = document.getElementById("password").value;
        if (password == "") {
            inputCheckLabel.innerHTML = CheckMessageGenerator("Kullanıcı şifresi boş bırakılamaz", "error");
            return;
        }
        if (password.length < 6) {
            inputCheckLabel.innerHTML = CheckMessageGenerator("Kullanıcı şifresi en az 6 karakterli olmalıdır.", "error");
            return;
        }
        let passwordConfirm = document.getElementById("passwordConfirm").value;
        if (password != passwordConfirm) {
            inputCheckLabel.innerHTML = CheckMessageGenerator("Şifreler farklı olamaz.", "error");
            return;
        }


    }

    function CheckMessageGenerator(message, status) {
        let response = ""
        if (status == "error") {
            response =
                ` 
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="mdi mdi-block-helper me-2"></i>
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
        }
        if (status == "success") {
            response =
                ` 
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="mdi mdi-check-all me-2"></i>
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
        }
        return response;
    }
</script>




